@import 'nib'
@import 'character'

// Main

body, html
  height 100%

#map 
  height 100%

.darken
  background-color: rgb(0, 0, 0);
  opacity: 0.7; /* Safari, Opera */
  -moz-opacity:0.70; /* FireFox */
  filter: "alpha(opacity=70)"; /* IE */
  z-index: 20;
  height: 100%;
  width: 100%;
  background-repeat:repeat;
  position:fixed;
  top: 0px;
  left: 0px;

.hidden
  display none

